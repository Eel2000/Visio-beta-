@page
@model Visio_Beta_1.Areas.Admin.Pages.LivresModel
@{
    ViewData["Title"] = "Bibliotheque";
}

    <div class="container text-warning text-center">
        <h1 class="display-1">Admin <b class="text-info">Bibliotheque</b></h1>
    </div>

    <div class="container align-content-lg-end">
        <a href="#" class="btn btn-primary">Ajouter un livre</a>
    </div>

    <div class="container-fluid">
        @if(Model.GetBooks.Count() > 0)
        {
            <table class="table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Pages</th>
                        <th>Annee</th>
                        <th>Categorie</th>
                        <th>Contenu</th>
                        <th>Actions</th>
                    </tr>                    
                </thead>
                @foreach (var item in Model.GetBooks)
                {
                    <tbody>
                        <tr>
                            <td>@item.Id</td>                            
                            <td>@item.Title</td>                            
                            <td>@item.Author</td>                            
                            <td>@item.Pages<td>                            
                            <td>@item.Year</td>                            
                            <td>@item.BookCategory</td>                            
                            <td>@item.Content.Length</td>                            
                            <td>
                                <a href="#" class="btn btn-warning">Update</a>
                                <a href="#" class="btn btn-danger">Delete</a>
                            </td>                            
                        </tr>
                    </tbody>
                }
            </table>
        }
        else
        {
            <div class="border align-content-center mt-5">
                <h1 class="text-warning font-weight-bold display-1 text-center">Ooops!</h1>
                <h1 class="text-info text-center">Aucun livres n'est disponible pour l'instant Veuillez en ajouter.</h1>
            </div>
        }
    </div>