@page
@model Visio_Beta_1.Areas.Admin.Pages.Shared.AddModel
@{
    ViewData["Title"] = "Add New";
}

    <div class="container justify-content-sm-center">
        <h1 class="text-warning text-center">Admin <b class="text-info"> Add Book</b></h1>
    </div>

    <div class="card shadow-lg col-6 justify-content-md-center offset-3 pt-lg-3 mt-4">
        <form method="post">
            <div class="form-group row p-3">
                <div class="col-2">
                    <label asp-for="Book.Title"></label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="Book.Title"  class="form-control" />
                </div>
            </div>
            <div class="form-group row p-3">
                <div class="col-2">
                    <label asp-for="Book.Author"></label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="Book.Author" class="form-control" />
                </div>
            </div>
            <div class="form-group row p-3">
                <div class="col-2">
                    <label asp-for="Book.Pages"></label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="Book.Pages" class="form-control" />
                </div>
            </div>
            <div class="form-group row p-3">
                <div class="col-2">
                    <label asp-for="Book.Year"></label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="Book.Year" class="form-control" />
                </div>
            </div>
            <div class="form-group row p-3">
                <div class="col-2">
                    <label asp-for="Book.BookCategory"></label>
                </div>
                <div class="col-8">
                    <select asp-for="Book.BookCategory" class="dropdown text-info" asp-items="Model.Categories"></select>
                </div>
            </div> 
            <div class="form-group row p-3">
                <div class="col-2">
                    <label asp-for="Book.Content"></label>
                </div>
                <div class="col-8">
                    <input type="file" asp-for="BookViewModel.Fichier" class="form-control-file" />
                </div>
            </div>
            <div class="form-group row p-3 offset-3">
                <div class="col-4">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
                <div class="col-4">
                    <button class="btn btn-secondary text-white">Cancel</button>
                </div>
            </div>
        </form>
    </div>