@page
@model Visio_Beta_1.Areas.Admin.Pages.Shared.AddModel
@{
    ViewData["Title"] = "Add New";
}

<div class="container justify-content-sm-center">
    <h1 class="text-warning text-center">Admin <b class="text-info"> Add Book</b></h1>
</div>

<div class="card shadow-lg col-6 justify-content-md-center offset-3 pt-lg-3 mt-4">
    @* here we must add enctype="multipart/form-data" for allowing file uplqoding *@
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group row p-3">
            <div class="col-2">
                <label asp-for="BookViewModel.Title"></label>
            </div>
            <div class="col-8">
                <input type="text" asp-for="BookViewModel.Title" class="form-control" />
                <span class="text-warning" asp-validation-for="BookViewModel.Title"></span>
            </div>
        </div>
        <div class="form-group row p-3">
            <div class="col-2">
                <label asp-for="BookViewModel.Author"></label>
            </div>
            <div class="col-8">
                <input type="text" asp-for="BookViewModel.Author" class="form-control" />
                <span class="text-warning" asp-validation-for="BookViewModel.Author"></span>
            </div>
        </div>
        <div class="form-group row p-3">
            <div class="col-2">
                <label asp-for="BookViewModel.Pages"></label>
            </div>
            <div class="col-8">
                <input type="text" asp-for="BookViewModel.Pages" class="form-control" />
                <span class="text-warning" asp-validation-for="BookViewModel.Pages"></span>
            </div>
        </div>
        <div class="form-group row p-3">
            <div class="col-2">
                <label asp-for="BookViewModel.Year"></label>
            </div>
            <div class="col-8">
                <input type="text" asp-for="BookViewModel.Year" class="form-control" />
                <span class="text-warning" asp-validation-for="BookViewModel.Year"></span>
            </div>
        </div>
        @*<div class="form-group row p-3">
            <div class="col-2">
                <label asp-for="BookViewModel.BookCategory"></label>
            </div>
            <div class="col-8">
                <select class="dropdown text-info" asp-for="BookViewModel.BookCategory">
                    @foreach (var item in Model.Categories)
                    {
                        <option value="@item.Id">@item.Designation</option>
                    }
                </select>

            </div>
        </div>*@
        <div class="form-group row p-3">
            <div class="col-2">
                <label name="Categories" asp-for="BookViewModel.Fichier"></label>
            </div>
            <div class="col-8">
                <input type="file" asp-for="BookViewModel.Fichier" class="form-control-file" />
                <span class="text-warning" asp-validation-for="BookViewModel.Fichier"></span>
            </div>
        </div>
        <div class="form-group row p-3 offset-3">
            <div class="col-4">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
            <div class="col-4">
                <button class="btn btn-secondary text-white">Cancel</button>
            </div>
        </div>
    </form>
</div>

@section scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
